<div class="row">
   {{#each goodsList}}
   <div class="col-4">
    <div class="card">
    <div class="card-text-bg-light">
        <img class="card-img-top" src="{{img}}">
        <div class="cart-body">
            <div class="card-title">
                <div class="mb-2">
                    {{#if isHot}}<span class="badge text-bg-warning rounded-pill">Hot!</span>{{/if}}
                    {{#if isNew}}<span class="badge text-bg-primary rounded-pill">Нове</span>{{/if}}
                </div>
                <div>
                    {{#if isFast}}<span class="badge text-bg-success ">Швидка доставка</span>{{/if}}
                    {{#if isFree}}<span class="badge text-bg-secondary ">безкоштовна доставка</span>{{/if}}
                </div>
            </div>
            <h5>{{name}}</h5>
            <p>{{review.amount}}{{review.text}}</p>
            <h4>{{price}}</h4>
            <p>{{delivery}}</p>

            <div>
                {{#each buttons}}
               <div class="mb-2">{{#if isPrimary}} <a href="{{link}}" class="btn btn-secondary m-1" target="_blank">{{text}}</a>{{/if}}</div> 
                 <div clas="mb-2">{{#if isSecondary}} <a href="{{link}}" class="btn btn-secondary m-1" target="_blank">{{text}}</a>{{/if}}</div>
                {{/each}}
            </div>

              {{#each characteristics}}
                <ul class="ms-0 mb-1">
                    <li>
                        {{title}}:{{value}}
                    </li>
                </ul>
                {{/each}}
        </div>

    </div>
</div>
   </div>
   {{/each}}
</div>