<main class="p-5">
      {{#with navigation}}
        <div class="card">
             <div class="nav row">
                <ul>
                    <li class="d-flex">
                    {{#each links}}
                          <a href="{{href}}" class="nav-link {{#unless href includeZero=true}} disabled {{/unless}}"
                    target="_blank">{{text}}</a>
                    {{/each}}
                    </li>
                </ul>
             </div>
        </div>
     {{/with}}

     <div class="row">
        {{#with formBlock}}
            <div class="col-8 ">
                <div class="">
                    <h2>{{header}}</h2>
                    <p>{{rating.title}}: {{rating.value}}</p>
                </div>
                    

                    {{#with actionBlock}}
                    
                     <ul class="nav nav-tabs">
                    <li class="d-flex">
                    {{#each tabs}}
                          <a href="#" class="nav-link {{#if isActive}} active {{/if}}">{{text}}</a>
                    {{/each}}
                    </li>
                    </ul>
                     

                    <hr class="my-4">

                    {{#with report}}
                    <div class="row">
                    <div class="card">
                        <p>{{title}}</p>
                        {{#with button}}
                        <a href="{{link}}" class="btn btn-secondary col-5 mb-1" target="_blank" >{{text}}</a>
                        {{/with}}

                    </div>
                    </div>
                    {{/with}}
                    {{/with}}


                     <hr class="my-4">

                    {{#with feedbackBlock}}
                    <div class="display-4 my-5">
                    <h2>{{title}}</h2>
                    </div>
                    {{#each buttons}}
                     {{#if isWarning}} <a href="{{link}}" class="btn btn-warning col-3 mx-2"
                        target="_blank">{{text}}</a>{{/if}}
                    {{#if isSuccess}} <a href="{{link}}" class="btn btn-success col-3 mx-3"
                        target="_blank">{{text}}</a>{{/if}}
                    {{#if isDanger}} <a href="{{link}}" class="btn btn-danger col-3 mx-3"
                        target="_blank">{{text}}</a>{{/if}}
                    {{/each}}

                    {{/with}}

            </div>

        <div class="col-4">
            
            <div class="row">
                {{#with goodsInfo}}

                <div class="card">
                    <div class="col-12">
                        <img class="m-2" src="{{photo}}">
                        <p><b class="ms-2">{{name}}</b></p>
                    </div>
                </div>

                <div class="card my-2">
                    <div class="m-1">
                        <p class="mb-0">
                        <h4>{{price}}</h4>
                        </p>
                        {{#if inMarket}} Є в наявності {{/if}}
                        {{#each buttons}}
                        <div class="my-2">
                            {{#if isPrimary}} <a href="{{link}}" class="btn btn-primary"
                                target="_blank">{{text}}</a>{{/if}}
                            {{#if isSecondary}} <a href="{{link}}" class="btn btn-secondary"
                                target="_blank">{{text}}</a>{{/if}}
                        {{/each}}
                        </div>
                    </div>
                </div>
            </div>

            <div class="card">
                {{#with seller}}
                <p class="my-2">{{title}}: <b>{{value}}</b></p>
                {{/with}}
            </div>
            
         {{/with}}          
         {{/with}}
    </div>
    </div>

   <hr class="my-5">
   
   <div class="card">
       {{>reviewItem}}

</div>
   </div>

     <div class="card text-bg-success my-5">
        {{#with service}}
        <h2 class="card-title text-center">{{title}}</h2>
        <div class="card-body text-center">
            <p>{{description}}</p>
             {{#each buttons}}
        <a href="{{link}}" class="btn btn-primary" target="_blank">{{text}}</a>
        {{/each}}
        </div>
        {{/with}}
     </div>

     <div class="row">
                {{#each footer}}
                <div class="na col-2">
                    {{#each this}}
                    <div>
                        <a class="nav-link {{#if @last}}disabled{{/if}}" href="{{link}}">{{text}}</a>
                    </div>
                    {{/each}}
                </div>
                {{/each}}
         </div>
   


    




    




</main>